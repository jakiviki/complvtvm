<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BoxActivity">

    <ImageView
        android:id="@+id/id_img_box_peque"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp90"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/principiante" />

    <ListView
        android:id="@+id/id_lisView_box_peque"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/id_botonBox_peque"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_fecha_text">

    </ListView>

    <Button
        android:id="@+id/id_botonBox_peque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="mañana"
        android:text="@string/Mañana"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/id_aforo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/aforo1"
        android:textSize="@dimen/sp25"
        app:layout_constraintStart_toEndOf="@+id/id_fecha_text"
        app:layout_constraintTop_toBottomOf="@+id/id_img_box_peque" />

    <TextView
        android:id="@+id/id_fecha_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="@string/fecha"
        android:textSize="@dimen/sp25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_img_box_peque" />

    <TextView
        android:id="@+id/n_aforo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/numero_aforo"
        android:textSize="@dimen/sp25"
        app:layout_constraintStart_toEndOf="@+id/id_aforo"
        app:layout_constraintTop_toBottomOf="@+id/id_img_box_peque" />

    <TextView
        android:id="@+id/id_personas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="@string/personas"
        android:textSize="@dimen/sp25"
        app:layout_constraintStart_toEndOf="@+id/n_aforo"
        app:layout_constraintTop_toBottomOf="@+id/id_img_box_peque" />

</androidx.constraintlayout.widget.ConstraintLayout>